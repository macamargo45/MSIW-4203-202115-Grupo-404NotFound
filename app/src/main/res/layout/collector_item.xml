<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="collector" type="com.example.vinilos.models.Collector"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorPrimary">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/collectorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{collector.name}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:contentDescription="@{Integer.toString(collector.id)}"/>

                <TextView
                    android:id="@+id/collectorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{collector.email}"
                    android:contentDescription="@{Integer.toString(collector.id)}" />
            </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>